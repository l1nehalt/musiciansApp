@model MusiciansApp.Model.Track
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Добавить трек";
}

<h2>Добавить трек</h2>

<form asp-action="AddTrack" asp-controller="Tracks" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Musician">Исполнитель</label>
        <input asp-for="Musician" name="musician" type="text" class="form-control" placeholder="Введите название трека" required />
    </div>

    <div class="form-group">
        <label asp-for="Title">Название трека</label>
        <input asp-for="Title" name="title" type="text" class="form-control" placeholder="Введите название трека" required />
    </div>

    <div class="form-group">
        <label asp-for="FilePath">Выберите MP3 файл</label>
        <input asp-for="FilePath" name="trackFile" type="file" accept=".mp3" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Загрузить</button>
</form>
