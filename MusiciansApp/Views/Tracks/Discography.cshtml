@model List<MusiciansApp.Model.Track>

<h2>Дискография исполнителя</h2>

@if (Model.Count > 0)
{
    <ul>
        @foreach (var track in Model)
        {
            <li>
                <strong>@track.Title</strong> - @track.Musician
                <br />
                <audio controls>
                    <source src="@track.FilePath" type="audio/mpeg">
                    Ваш браузер не поддерживает воспроизведение аудиофайлов.
                </audio>
            </li>
        }
    </ul>
}
else
{
    <p>Треки не найдены.</p>
}
